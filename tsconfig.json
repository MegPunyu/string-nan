{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "module": "ES6",
    "newLine": "lf",
    "outDir": "./dist",
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "target": "ES2020",
    "moduleResolution": "nodenext"
  },
  "include": [
    "src/**/*.ts"
  ],
  "main": "./dist/index.js",
}
